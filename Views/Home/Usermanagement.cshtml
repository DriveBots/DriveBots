@{
    ViewData["Title"] = "User Management - DriveBots";
    Layout = "_adminLayout";
}

<div class="sidebar">
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item" })
    @Html.ActionLink("Applications", "Index", "Applications", null, new { @class = "nav-item" })
    @Html.ActionLink("Transactions", "Index", "Transactions", null, new { @class = "nav-item" })
    @Html.ActionLink("Reports", "Index", "Reports", null, new { @class = "nav-item" })
    @Html.ActionLink("Settings", "Index", "Settings", null, new { @class = "nav-item" })
</div>

<div class="user-management">
    <h2>User Management - DriveBots</h2>
    <p>Below is a list of users registered in the DriveBots system. You can remove users as needed.</p>

    <div class="user-summary-cards">
        <div class="user-card">
            <h3>Total Users</h3>
            <p>1,200</p>
        </div>
    </div>

    <div class="user-table-container">
        <table class="user-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date Registered</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @* Sample repeated users *@
                @for (int i = 1; i <= 10; i++)
                {
                    <tr>
                        <td>User @i</td>
                        <td>user@drivebots.io</td>
                        <td>2025-04-0@((i % 9) + 1)</td>
                        <td>
                            <button class="delete-btn" onclick="confirm('Are you sure you want to delete this user?')">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


   

