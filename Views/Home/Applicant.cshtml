
@{
    ViewData["Title"] = "Applicant Dashboard";
}

<body>
    @using (Html.BeginForm("SignUp", "SignUp", FormMethod.Post))
    {
        <div class="dashboard">
            <h1>Welcome, @User.Identity.Name!</h1>
            <p>Your application dashboard</p>
            <!-- Application form or status would go here -->
            @Html.ActionLink(
                    linkText: "Start New Application",
                    actionName: "ApplicationPage",
                    controllerName: "Home",
                    routeValues: null,
                    htmlAttributes: new { @class = "btn btn-primary" }
            )

            <form asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit" class="btn btn-secondary">Logout</button>
                <img src=" C:\Users\LENOVO\Downloads\background image.jpg" alt="Image" class="image" />
            </form>
        </div>
    }

    <div class="dashboard-wrapper">

        <!-- Sidebar -->
        <div class="sidebar">
           
            @Html.ActionLink(
                     linkText: "Home",
                     actionName: "Index",
                     controllerName: "Home",
                     routeValues: null
            )

            @Html.ActionLink(
                     linkText: "Applications",
                     actionName: "Applications",
                     controllerName: "Home",
                     routeValues: null
            )

            @Html.ActionLink(
                     linkText: "Appointments",
                     actionName: "Appointments",
                     controllerName: "Home",
                     routeValues: null
            )

            @Html.ActionLink(
                     linkText: "Payments",
                     actionName: "Payment",
                     controllerName: "Home",
                     routeValues: null
            )

            @Html.ActionLink(
                     linkText: "Settings",

                     routeValues: null
            )
            
        </div>

    </div><!-- Footer -->

    <footer>
        <p>
            Help Center | Admin Guidelines | Privacy Policy | Terms |
            Contact: DriveBots@gmail.com | +267 686 7890
        </p>
    </footer>
</body>

