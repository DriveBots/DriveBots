
@{
    ViewData["Title"] = "Applicant";
}
<html>
<body>
    <!-- Application Form -->
    <div class="form-container">
        <h2>Application Form</h2>

        <form method="post" action="submit_application.php" enctype="multipart/form-data">

            <div class="input-group">
                <label for="fullName">Full Name:</label>
                <input type="text" id="fullName" name="fullName" required>
            </div>

            <div class="input-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="input-group">
                <label for="address">Residential Address:</label>
                <input type="text" id="address" name="address" required>
            </div>

            <div class="input-group">
                <label for="applicationType">Application Type:</label>
                <select id="applicationType" name="applicationType" required>
                    <option value="learners">Learner’s License</option>
                    <option value="renewal">License Renewal</option>
                </select>
            </div>

            <div class="input-group">
                <label for="licenseType">License Type:</label>
                <select id="licenseType" name="licenseType" required>
                    <option value="car">Car</option>
                    <option value="truck">Truck</option>
                    <option value="motorbike">Motorbike</option>
                </select>
            </div>

            <div class="input-group">
                <label for="date">Application Date:</label>
                <input type="date" id="date" name="date" required>
            </div>

            <div class="input-group">
                <label for="uploadId">Upload ID:</label>
                <input type="file" id="uploadId" name="uploadId" accept=".jpg, .png, .pdf" required>
            </div>

            <button type="submit" class="btn">Apply</button>
        </form>
    </div>

</body>
<html/>


