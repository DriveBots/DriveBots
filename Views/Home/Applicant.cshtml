
@{
    ViewData["Title"] = "Applicant Dashboard";
}

@using (Html.BeginForm("SignUp", "SignUp", FormMethod.Post))
{
    <div class="dashboard">
        <h1>Welcome, @User.Identity.Name!</h1>
        <p>Your application dashboard</p>
        <!-- Application form or status would go here -->
        <a asp-action="Apply" asp-controller="Application" class="btn btn-primary">Start New Application</a>

        <form asp-action="Logout" asp-controller="Account" method="post">
            <button type="submit" class="btn btn-secondary">Logout</button>
            <img src="image.jpg" alt="Image" class="image" />
        </form>
    </div>
}

<body>
    <div class="dashboard-wrapper">

        <!-- Sidebar -->
        <div class="sidebar">
           
            <a href="#">Home</a>
            <a href="#">Applications</a>
            <a href="#">Appointments</a>
            <a href="#">Payments</a>
            <a href="#">Settings</a>
        </div>

    </div><!-- Footer -->
    <div class="footer">
    <span>Help Center</span>
    <span>Terms and Conditions</span>
    <span>Privacy Policy</span>
</div>
</body>
