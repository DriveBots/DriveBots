@{
    ViewData["Title"] = "SignUp";
}

<body>
    <div class="auth-container">
        <div class="auth-box">
            <h2>Create an account</h2>
            <p>Already have an account? <a href="login.html">Log in</a></p>
            <form action="#">
                <label for="fullname">What should we call you?</label>
                <input type="text" id="fullname" placeholder="Enter your full name" required>
                <label for="email">What’s your email?</label>
                <input type="email" id="email" placeholder="Enter your email address" required>
                <label for="password">Create a password</label>
                <input type="password" id="password" placeholder="Enter your password" required>
                <p class="password-hint">Use 8 or more characters with a mix of letters, numbers & symbols</p>
                <p class="terms">By creating an account, you agree to the <a href="#">Terms of use</a> and <a href="#">Privacy Policy</a>.</p>
                <button type="submit" class="btn">Create an account</button>
            </form>
        </div>
    </div>

</body>
