@{
    ViewData["Title"] = "Admin";
    Layout = "_adminLayout";
}

<head>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>

<body>
    <div class="container">
        <div class="sidebar">
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item" })
            @Html.ActionLink("Applications", "Index", "Applications", null, new { @class = "nav-item" })
            @Html.ActionLink("Transactions", "Index", "Transactions", null, new { @class = "nav-item" })
            @Html.ActionLink("Reports and Analytics", "Index", "Reports", null, new { @class = "nav-item" })
            @Html.ActionLink("User Management", "Index", "UserManagement", null, new { @class = "nav-item" })
            @Html.ActionLink("Settings", "Index", "Settings", null, new { @class = "nav-item" })
        </div>

        <div class="main">
            <header>
                <h1>Welcome, Admin</h1>
                <p>Here's a quick overview of current activity.</p>
            </header>

            <div class="cards">
                <div class="card">
                    <h3>Total Applications</h3>
                    <p>1,245</p>
                </div>
                <div class="card">
                    <h3>Pending Approvals</h3>
                    <p>213</p>
                </div>
                <div class="card">
                    <h3>Transactions Today</h3>
                    <p>74</p>
                </div>
                <div class="card">
                    <h3>Approved Applications</h3>
                    <p>467</p>
                </div>
            </div>
        </div>
    </div>
</body>
