@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="site.css">
</head>
<body>

    <!-- Hero Section -->
    <header class="hero">
        <div class="hero-content">
            <h2>Your one-stop solution for license creation, renewal, and efficient online queuing for transport services.</h2>
            <h1>Welcome to Drivebots</h1>
            <a asp-controller="Application" asp-action="BookNow" class="btn">Book Now</a>
        </div>
    </header>

    <!-- Application Process Section -->
    <section class="application-process">
        <h2>Application Process</h2>
        <p>Follow these simple steps to get started with your licensing process.</p>

        <div class="process-steps">
            <div class="step">
                <img src="step1.jpg" alt="Step 1">
                <h3>Step 1: Register</h3>
                <p>Create an account to start your application process.</p>
            </div>
            <div class="step">
                <img src="step2.jpg" alt="Step 2">
                <h3>Step 2: Submit Documents</h3>
                <p>Upload required documents for verification.</p>
            </div>
            <div class="step">
                <img src="step3.jpg" alt="Step 3">
                <h3>Step 3: Make Payment</h3>
                <p>Securely make payments online.</p>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials">
        <h2>What Our Clients Say</h2>
        <div class="testimonial-box">
            <p>"Drivebots made my license renewal process so easy! Highly recommended."</p>
            <h4>- John Doe</h4>
        </div>
        <div class="testimonial-box">
            <p>"Fast and efficient service. I got my learner's license in no time!"</p>
            <h4>- Jane Smith</h4>
        </div>
    </section>

   

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 Drivebots. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
