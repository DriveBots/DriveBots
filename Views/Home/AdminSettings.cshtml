@{
    ViewData["Title"] = "Admin Settings";
}

<main class="max-w-5xl mx-auto p-6 space-y-12">
    <h1 class="text-4xl font-bold text-center mb-8 text-white">Admin Settings</h1>

    <!-- User Management -->
    <section class="space-y-6 bg-black bg-opacity-50 p-6 rounded-lg">
        <h2 class="text-2xl font-semibold text-white">User Management</h2>
        <div class="space-y-4">
            <div>
                <label class="block font-semibold text-white">Create New User</label>
                <input type="text" placeholder="Enter new user details" class="w-full p-2 rounded border bg-gray-100 text-black">
            </div>
            <div>
                <label class="block font-semibold text-white">View User Profiles</label>
                <button class="bg-blue-500 px-4 py-2 rounded text-white">View All Users</button>
            </div>
            <div>
                <label class="block font-semibold text-white">Block/Suspend User</label>
                <input type="text" placeholder="Enter username to block" class="w-full p-2 rounded border bg-gray-100 text-black">
            </div>
            <div>
                <label class="block font-semibold text-white">Assign Role</label>
                <select class="w-full p-2 rounded border bg-gray-100 text-black">
                    <option>Admin</option>
                    <option>Applicant</option>
                    <option>Moderator</option>
                </select>
            </div>
        </div>
    </section>

    <!-- Application Review -->
    <section class="space-y-6 bg-black bg-opacity-50 p-6 rounded-lg">
        <h2 class="text-2xl font-semibold text-white">Application Review</h2>
        <div class="space-y-4">
            <button class="bg-blue-500 px-4 py-2 rounded text-white">View Pending Applications</button>
            <div>
                <label class="block font-semibold text-white">Approve/Reject Application</label>
                <input type="text" placeholder="Enter application ID" class="w-full p-2 rounded border bg-gray-100 text-black">
            </div>
            <div>
                <label class="block font-semibold text-white">Set Application Status</label>
                <select class="w-full p-2 rounded border bg-gray-100 text-black">
                    <option>Under Review</option>
                    <option>Approved</option>
                    <option>Rejected</option>
                </select>
            </div>
        </div>
    </section>

    <!-- Save Button -->
    <section class="space-y-4">
        <button class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded shadow">Save All Changes</button>
    </section>
</main>


<script src="https://cdn.tailwindcss.com"></script>