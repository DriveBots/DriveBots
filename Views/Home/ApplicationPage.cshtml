@{
    ViewData["Title"] = "ApplicationPage";
}

<body>
    <!-- Main container -->
    <div class="container">
        <div class="application-card">
            <h2>Apply for a License</h2>
            <form id="applicationForm">
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" required />
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required />
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required />
                </div>
                <div class="form-group">
                    <label for="license">License Type</label>
                    <select id="license" name="license" required>
                        <option value="">-- Select a License --</option>
                        <option value="learner">Learner's License</option>
                        <option value="driver">Driver's License</option>
                        <option value="renewal">Driver's License Renewal</option>
                    </select>
                </div>

                <!-- Additional form fields for identification document and old driver license -->
                <div class="form-group">
                    <label for="idDocument">Identification Document</label>
                    <input type="file" id="idDocument" name="idDocument" required />
                </div>

                <div class="form-group">
                    <label for="oldDriverLicense">Old Driver License (if applicable)</label>
                    <input type="file" id="oldDriverLicense" name="oldDriverLicense" />
                </div>

                <button type="submit" class="btn-submit">Submit Application</button>
            </form>

            <!-- Confirmation message -->
            <div id="message" class="message">
                Your application has been submitted!
            </div>
        </div>
    </div>

    <script>
        // Grab the form element and message div.
        const form = document.getElementById('applicationForm');
        const messageDiv = document.getElementById('message');

        // Handle form submission.
        form.addEventListener('submit', function(e) {
            e.preventDefault();

            // Here you could perform further validation or send the data via AJAX.

            // Show the confirmation message.
            messageDiv.style.display = 'block';

            // Hide the message after 4 seconds.
            setTimeout(() => {
                messageDiv.style.display = 'none';
            }, 4000);

            // Reset the form fields.
            form.reset();
        });
    </script>
</body>
