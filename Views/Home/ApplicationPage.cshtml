@{
    ViewData["Title"] = "ApplicationPage";
}

<body>
    <!-- Main container -->
    <div class="form-container">
        <h2>Application Form</h2>

        <form method="post" action="submit_application.php" enctype="multipart/form-data">
            
            <div class="input-group">
                <label for="fullName">Full Name:</label>
                <input type="text" id="fullName" name="fullName" required>
            </div>

            <div class="input-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="input-group">
                <label for="address">Residential Address:</label>
                <input type="text" id="address" name="address" required>
            </div>

            <div class="input-group">
                <label for="applicationType">Application Type:</label>
                <select id="applicationType" name="applicationType" required>
                    <option value="learners">Learnerâ€™s License</option>
                    <option value="renewal">License Renewal</option>
                </select>
            </div>

            <div class="input-group">
                <label for="licenseType">License Type:</label>
                <select id="licenseType" name="licenseType" required>
                    <option value="classa">A</option>
                    <option value="classa1">A1</option>
                    <option value="classb">B</option>
                    <option value="classc">C</option>
                    <option value="classc1">C1</option>
                    <option value="classec">EC</option>
                    <option value="classec1">EC1</option>
                    <option value="classf">F</option>
                    <option value="classh">H</option>
                </select>
            </div>

            <div class="input-group">
                <label for="date">Application Date:</label>
                <input type="date" id="date" name="date" required>
            </div>

            <div class="input-group">
                <label for="uploadId">Upload ID:</label>
                <input type="file" id="uploadId" name="uploadId" accept=".jpg, .png, .pdf" required>
            </div>

            <button type="submit" class="btn">Apply</button>
        </form>
    </div>
            <!-- Confirmation message -->
            <div id="message" class="message">
                Your application has been submitted!
            </div>
        </div>
    </div>

    <script>
        // Grab the form element and message div.
        const form = document.getElementById('applicationForm');
        const messageDiv = document.getElementById('message');

        // Handle form submission.
        form.addEventListener('submit', function (e) {
            e.preventDefault();

            // Here you could perform further validation or send the data via AJAX.

            // Show the confirmation message.
            messageDiv.style.display = 'block';

            // Hide the message after 4 seconds.
            setTimeout(() => {
                messageDiv.style.display = 'none';
            }, 4000);

            // Reset the form fields.
            form.reset();
        });
    </script>
</body>
